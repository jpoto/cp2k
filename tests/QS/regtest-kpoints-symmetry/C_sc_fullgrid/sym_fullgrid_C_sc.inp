@SET NREP 1
&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &KPOINTS
      EPS_GEO 1.e-8
      FULL_GRID ON
      PARALLEL_GROUP_SIZE 0
      SCHEME MONKHORST-PACK 3 3 3
      SYMMETRY ON
      VERBOSE T
    &END KPOINTS
    &MGRID
      CUTOFF 300
      REL_CUTOFF 50
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-14
      EXTRAPOLATION USE_GUESS
      METHOD GPW
    &END QS
    &SCF
      #      ADDED_MOS 20
      EPS_SCF 1.0E-6
      MAX_SCF 99
      SCF_GUESS ATOMIC
      &MIXING
        ALPHA 0.4
        BETA 1.5
        METHOD BROYDEN_MIXING
        NBROYDEN 8
      &END MIXING
      #      &SMEAR ON
      #        ELECTRONIC_TEMPERATURE 300
      #        METHOD FERMI_DIRAC
      #      &END SMEAR
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      A 4.33 0.000 0.000
      B 0.000 4.33 0.000
      C 0.000 0.000 4.33
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
      PERIODIC XYZ
    &END CELL
    &COORD
      SCALED
      C 0.000 0.000 0.000
    &END COORD
    &KIND C
      BASIS_SET ORB SZV-GTH-q4
      POTENTIAL GTH-PBE-q4
    &END KIND
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} ${NREP} ${NREP}
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL HIGH
  PROJECT dat_C_all
&END GLOBAL
