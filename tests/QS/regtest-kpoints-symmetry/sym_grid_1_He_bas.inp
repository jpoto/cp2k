@SET NREP 1
&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &KPOINTS
      EPS_GEO 1.e-8
      FULL_GRID OFF
      PARALLEL_GROUP_SIZE 0
      SCHEME MONKHORST-PACK 3 3 3
      SYMMETRY ON
      VERBOSE T
    &END KPOINTS
    &MGRID
      CUTOFF 300
      REL_CUTOFF 50
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-14
      EXTRAPOLATION USE_GUESS
      METHOD GPW
    &END QS
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 1
      SCF_GUESS ATOMIC
      &MIXING
        ALPHA 0.4
        BETA 1.5
        METHOD BROYDEN_MIXING
        NBROYDEN 8
      &END MIXING
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      A 2.70 0.000 0.000
      B 0.000 2.70 0.000
      C 0.000 0.000 2.70
      MULTIPLE_UNIT_CELL ${NREP} 1 1
      PERIODIC XYZ
    &END CELL
    &COORD
      SCALED
      He 0.000 0.000 0.000
    &END COORD
    &KIND H
      BASIS_SET ORB SZV-MOLOPT-GTH-q1
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND He
      BASIS_SET ORB TZVP-MOLOPT-PBE-GTH-q2
      POTENTIAL GTH-PBE-q2
    &END KIND
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ${NREP} 1 1
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL HIGH
  PROJECT dat_H_sym_grid
&END GLOBAL
